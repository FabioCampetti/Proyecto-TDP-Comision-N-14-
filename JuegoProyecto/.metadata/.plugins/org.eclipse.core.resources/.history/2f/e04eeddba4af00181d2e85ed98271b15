package Naves;

public abstract class Entidad {

	protected int vida;
	//protected Disparo disparo;
	//protected Casilla pos;
	
	/*
	public Entidad(int vida,Disparo disparo,Casilla pos) {
		this.vida = vida;
		this.disparo = disparo;
		this.pos = pos;
	}
	*/
	public abstract void mover();
	public abstract void mover(int dir);
	
	public int getVida() {
		return vida;
	}
	public void setVida(int vida) {
		this.vida = vida;
	}
	public boolean isDead() {
		return (vida <= 0);
	}
		
}
